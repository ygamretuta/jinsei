<div class="row">
  <div class="span10">
    <%= render_cell :reviews, :index, {:business=>@business, :product=>@product, :reviews=>@reviews} %>

    <% if current_user and not @business.is_owned_by?(current_user) and not @business.is_reviewed_by?(current_user)%>
        <%= link_to 'Add Review', new_business_review_path(@business) %>
    <% end %>
  </div>
</div>
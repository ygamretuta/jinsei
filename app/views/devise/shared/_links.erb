<ul id="devise-shared-links">
    <%- if controller_name != 'sessions' %>
      <li><%= link_to raw("<i class='icon-signin'></i> Sign in"), new_session_path(resource_name),
        {:class => "btn"}
      %></li>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <li><%= link_to raw("<i class='icon-pencil'></i> Sign up"), new_registration_path(resource_name),
              {:class => 'btn'}
      %></li>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
      <li>
        <%= link_to raw("<i class='icon-group'></i> Reset Your Password"),
                  new_password_path(resource_name),
                  {:class => 'btn'}%>
      </li>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <li><%= link_to raw("<i class='icon-envelope-alt'></i> Resend Confirmation Email"),
            new_confirmation_path(resource_name),
            {:class => "btn"}
      %></li>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <li><%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %></li>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <li><%= link_to raw("<i class='icon-#{provider.to_s.downcase}'></i> Sign in with #{provider.to_s.titleize}"),
                    omniauth_authorize_path(resource_name, provider),
                    {:class=>"btn"} %></li>
      <% end -%>
    <% end -%>
</ul>
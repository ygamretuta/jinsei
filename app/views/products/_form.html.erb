<%= simple_form_for([@business, @product], :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.association :catalog %>

    <% unless @product.photo.blank? %>
        <div class="controls"><%= image_tag @product.photo.thumb.url %></div>
        <%= f.input :remove_photo, :as => :boolean %>
    <% end %>

    <%= f.input :photo, :as => :file %>

  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn btn-primary" %>
  </div>
<% end %>

<%= simple_form_for([@business, @branch], :html => {:class=>'form-horizontal'}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :location %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, :class => 'btn btn-primary' %>
      <%= link_to "Back to #{@business.name}", business_path(@business), {:class=>'btn btn-primary'}  %>
    </div>
<% end %>
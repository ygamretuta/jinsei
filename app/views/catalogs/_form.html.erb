<%= simple_form_for([@business, @catalog]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description, :input_html => {:rows => 5} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary form-button', "data-loading-text"=>"Submitting..." %>
  </div>
<% end %>
